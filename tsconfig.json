{
  "compilerOptions": {
    "lib": ["es2022"],
    "target": "es2022",
    "module": "es2022",
    "outDir": "./public",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "public"]
}
